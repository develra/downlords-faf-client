<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="userInfoRoot" prefHeight="700.0" prefWidth="900.0"
      styleClass="user-info-window" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.faforever.client.chat.UserInfoWindowController">
    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="user-info-header-area">
        <padding>
            <Insets left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label fx:id="usernameLabel" maxWidth="1.7976931348623157E308" styleClass="h1" text="&lt;Username&gt;"/>
        <Label fx:id="countryLabel" text="&lt;Country&gt;">
            <graphic>
                <ImageView fx:id="countryImageView" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
        </Label>
    </HBox>
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="%userInfo.general">
            <graphic>
                <Region styleClass="icon,info-icon"/>
            </graphic>
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308">
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <GridPane hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                        </rowConstraints>
                        <GridPane prefWidth="250.0" styleClass="card">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label styleClass="h2" text="%ranked1v1.gamesPlayed"/>
                            <Label fx:id="gamesPlayedLabel" alignment="CENTER"
                                   maxWidth="1.7976931348623157E308" prefHeight="80.0"
                                   styleClass="h1" text="000" GridPane.rowIndex="1"/>
                        </GridPane>
                        <GridPane prefWidth="250.0" styleClass="card" GridPane.columnIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label styleClass="h2" text="%userInfo.ratingGlobal"/>
                            <Label fx:id="ratingLabelGlobal" prefHeight="80.0" styleClass="h1"
                                   text="0000" GridPane.halignment="CENTER"
                                   GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                        </GridPane>
                        <GridPane prefWidth="250.0" styleClass="card" GridPane.columnIndex="2">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label styleClass="h2" text="%userInfo.rating1v1"/>
                            <Label fx:id="ratingLabel1v1" prefHeight="80.0" styleClass="h1"
                                   text="0000" GridPane.halignment="CENTER"
                                   GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                        </GridPane>
                        <VBox styleClass="card" GridPane.columnSpan="2147483647"
                              GridPane.rowIndex="1">
                            <padding>
                                <Insets right="15.0"/>
                            </padding>
                            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                <padding>
                                    <Insets top="10.0"/>
                                </padding>
                                <ComboBox fx:id="timePeriodComboBox"
                                          onAction="#plotPlayerRatingGraph"/>
                                <ComboBox fx:id="ratingTypeComboBox"
                                          onAction="#onRatingTypeChange"/>
                            </HBox>
                            <LineChart fx:id="ratingHistoryChart" createSymbols="false"
                                       legendVisible="false" prefHeight="300.0"
                                       VBox.vgrow="ALWAYS">
                                <xAxis>
                                    <NumberAxis forceZeroInRange="false" autoRanging="false"
                                                side="BOTTOM" fx:id="xAxis"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="yAxis" forceZeroInRange="false"
                                                side="LEFT"/>
                                </yAxis>
                            </LineChart>
                        </VBox>
                    </GridPane>
                </VBox>
            </ScrollPane>
        </Tab>
        <Tab text="%userInfo.statistics">
            <graphic>
                <Region styleClass="icon,statistics-icon"/>
            </graphic>
            <ScrollPane fitToWidth="true">
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <VBox styleClass="card">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <StackedBarChart fx:id="factionsChart" maxHeight="1.7976931348623157E308"
                                         maxWidth="1.7976931348623157E308"
                                         title="%userInfo.winLossPerFaction">
                            <xAxis>
                                <CategoryAxis fx:id="factionsCategoryAxis" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="factionsNumberAxis" side="LEFT"/>
                            </yAxis>
                        </StackedBarChart>
                    </VBox>
                    <VBox styleClass="card" GridPane.columnIndex="1">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <PieChart fx:id="unitsBuiltChart" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308"
                                  title="%userInfo.builtByCategory"/>
                    </VBox>
                    <VBox styleClass="card" GridPane.rowIndex="1">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <PieChart fx:id="techBuiltChart" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" title="%userInfo.builtByTech"/>
                    </VBox>
                    <VBox styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <PieChart fx:id="gamesPlayedChart" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" title="%userInfo.gamesPlayed"/>
                    </VBox>
                </GridPane>
            </ScrollPane>
        </Tab>
        <Tab closable="false" text="%userInfo.achievements">
            <graphic>
                <Region styleClass="icon,icon-trophy"/>
            </graphic>
            <VBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label fx:id="loadingProgressLabel" alignment="CENTER" contentDisplay="TOP"
                       graphicTextGap="10.0" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" text="%achievements.loading" VBox.vgrow="ALWAYS">
                    <graphic>
                        <ProgressIndicator prefHeight="50.0" prefWidth="50.0"/>
                    </graphic>
                </Label>
                <ScrollPane fx:id="achievementsPane" fitToWidth="true" maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="10.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <GridPane fx:id="mostRecentAchievementPane" hgap="20.0" VBox.vgrow="NEVER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="ALWAYS"/>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                            </rowConstraints>
                            <ImageView fx:id="mostRecentAchievementImageView" fitHeight="100.0"
                                       fitWidth="100.0" pickOnBounds="true" preserveRatio="true"
                                       GridPane.rowSpan="3"/>
                            <Label text="%achievements.mostRecent" GridPane.columnIndex="1"/>
                            <Label fx:id="mostRecentAchievementNameLabel"
                                   styleClass="achievement-title" text="&lt;Title&gt;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   GridPane.valignment="TOP"/>
                            <Label fx:id="mostRecentAchievementDescriptionLabel"
                                   text="&lt;Description&gt;" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2" GridPane.valignment="TOP"/>
                        </GridPane>
                        <HBox fx:id="unlockedAchievementsHeader" alignment="CENTER" spacing="10.0">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                            <Separator HBox.hgrow="ALWAYS"/>
                            <Label fx:id="unlockedAchievementsHeaderLabel" styleClass="h1"
                                   text="%achievements.unlocked"/>
                            <Separator HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <FlowPane fx:id="unlockedAchievementsContainer" alignment="TOP_CENTER"
                                  hgap="10.0" maxWidth="1.7976931348623157E308" vgap="10.0"/>
                        <HBox fx:id="lockedAchievementsHeader" alignment="CENTER" spacing="10.0">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                            <Separator HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lockedAchievementsHeaderLabel" styleClass="h1"
                                   text="%achievements.locked"/>
                            <Separator HBox.hgrow="ALWAYS"/>
                        </HBox>
                        <FlowPane fx:id="lockedAchievementsContainer" alignment="TOP_CENTER"
                                  hgap="10.0" maxWidth="1.7976931348623157E308" vgap="10.0">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </FlowPane>
                    </VBox>
                </ScrollPane>
            </VBox>
        </Tab>
        <Tab closable="false" text="%userInfo.nameHistory">
            <graphic>
                <Region styleClass="icon,icon-history"/>
            </graphic>
            <TableView fx:id="nameHistoryTable">
                <placeholder>
                    <Label text="%userInfo.nameHistory.noHistory"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="changeDateColumn" editable="false" prefWidth="150"
                                 text="%userInfo.nameHistory.date"/>
                    <TableColumn fx:id="nameColumn" editable="false" prefWidth="150"
                                 text="%userInfo.nameHistory.name"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </TableView>
        </Tab>
    </TabPane>
</VBox>
